<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textViewTtitleTab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elegantTextHeight="true"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="@string/teststand_config_tab3" />
    <TextView
        android:id="@+id/txtTestStandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTtitleTab3"

        android:layout_alignParentLeft="true"
        android:layout_marginTop="28dp"
        android:text="@string/teststand_name" />

    <TextView
        android:id="@+id/txtAltiNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtTestStandName"
        android:text="qqqq" />

    <TextView
        android:id="@+id/txtTestStandUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/txtTestStandName"
        android:text="@string/units" />

    <Spinner
        android:id="@+id/spinnerUnit"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/txtTestStandUnit"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/txtCalibrationWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTestStandUnit"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="28dp"
        android:text="@string/calibration_weight" />

    <EditText
        android:id="@+id/txtCalibrationWeightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCalibrationWeight"
        android:layout_alignParentRight="true"
        android:inputType="number|numberDecimal"
        android:text="0" />

    <TextView
        android:id="@+id/txtCalibrationOffset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCalibrationWeight"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="28dp"
        android:text="@string/calibration_offset" />

    <TextView
        android:id="@+id/txtCalibrationOffsetValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtCalibrationOffset"
        android:text="0" />
    <TextView
        android:id="@+id/txtCalibrationFactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCalibrationOffset"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="28dp"
        android:text="@string/calibration_factor" />

    <TextView
        android:id="@+id/txtCalibrationFactorValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtCalibrationFactor"
        android:text="0" />

    <TextView
        android:id="@+id/txtBluetoothName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCalibrationFactor"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp"
        android:text="Bluetooth Name"
        />

    <EditText
        android:id="@+id/editBluetoothName"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtBluetoothName"
        android:layout_alignParentRight="true"
        android:inputType="text"
        android:maxLength="15"
        android:singleLine="true"
        android:text="Rocket"
        android:textAlignment="textEnd"
        android:textIsSelectable="false"
        android:textSize="13sp" />

</RelativeLayout>